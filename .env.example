# Port number
PORT=8090

# URL of the Mongo DB
MONGODB_URL=mongodb://127.0.0.1:27017/node-boilerplate

# JWT
# JWT secret key
JWT_SECRET=thisisasamplesecret
# Number of minutes after which an access token expires
JWT_ACCESS_EXPIRATION_MINUTES=30
# Number of days after which a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=30
# Number of minutes after which a reset password token expires
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
# Number of minutes after which a verify email token expires
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# SMTP configuration options for the email service
# For testing, you can use a fake SMTP service like Ethereal: https://ethereal.email/create
SMTP_HOST=email-server
SMTP_PORT=587
SMTP_USERNAME=email-server-username
SMTP_PASSWORD=email-server-password
EMAIL_FROM=support@yourapp.com

# AWS S3 Credentials
AWS_REGION=your-aws-region             # e.g., us-east-1, eu-west-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=your-unique-bucket-name

# Razorpay Credentials
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Payment App Configuration
PAYMENT_APP_PORT=8000
# PAYMENT_APP_URL=https://outbound-backend.vercel.app:8000
PAYMENT_APP_URL=http://localhost:8000

# Google OAuth (set these to enable Google sign-in)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Backend callback URL that Google will redirect to after auth
# Example: https://your-backend.com/v1/auth/google/callback
GOOGLE_CALLBACK_URL=https://your-backend.com/v1/auth/google/callback

# Frontend base URL (used to redirect users after OAuth)
FRONTEND_URL=https://your-frontend.com

# Cookie settings for auth token (access token cookie)
# COOKIE_NAME: name of cookie set by backend for access token
COOKIE_NAME=accessToken
# COOKIE_SECURE: set to true in production to ensure cookie is only sent over HTTPS
COOKIE_SECURE=false
# COOKIE_DOMAIN: optional domain for cookie (e.g. .your-frontend.com)
COOKIE_DOMAIN=localhost